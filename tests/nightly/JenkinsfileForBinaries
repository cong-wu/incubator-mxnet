// Python 3
def python3_gpu_ut(docker_container_name) {
  timeout(time: max_time, unit: 'MINUTES') {
    sh "ci/build.py --nvidiadocker --build --platform ${docker_container_name} /work/runtime_functions.sh unittest_ubuntu_python3_gpu"
  }
}

def init_git() {
  deleteDir()
  retry(5) {
    try {
      timeout(time: 15, unit: 'MINUTES') {
        checkout scm
        sh 'git submodule update --init --recursive'
        sh 'git clean -d -f'
      }
    } catch (exc) {
      deleteDir()
      error "Failed to fetch source codes with ${exc}"
      sleep 2
    }
  }
}

try {
     stage('Build'){
        node("newslave") {

        }
     }

     stage('TestDocker'){
        node("newslave") {
            init_git()
            sh "sudo ci/build.py --build --platform ubuntu_gpu /work/runtime_functions.sh nightly_test_binaries"
        }
     }

     } catch (err) {
        throw err
    }
